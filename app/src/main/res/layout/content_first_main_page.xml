<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        tools:context=".first_main_page"
        >


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardMaxElevation="6dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/grocery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/grocery"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Grocery"
                    android:textColor="#3e9fd1"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardMaxElevation="6dp"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/laundry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/laundry"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Laundry"
                android:textAllCaps="true"
                android:textColor="#3e9fd1"
                android:textSize="20sp"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>






        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardMaxElevation="6dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/stationary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/stationary"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stationary"
                android:textColor="#3e9fd1"
                android:textAllCaps="true"
                android:textSize="20sp"
                />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="60dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardMaxElevation="6dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <ImageView
            android:id="@+id/canteen"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/canteen"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Canteen"
                android:textAllCaps="true"
                android:textColor="#3e9fd1"
                android:textSize="20sp"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>




    </LinearLayout>
</ScrollView>